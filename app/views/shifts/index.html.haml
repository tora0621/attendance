= search_form_for @q do |f|
  = f.label :start_at, "Keyword"
  = f.date_field :start_at_gteq
  = f.date_field :start_at_lteq_end_of_day
  = f.submit '検索'

- @shifts.each do |shift|
  %td= link_to shift.worker.fullname, '#'
  %td= shift.start_at.strftime('%Y年%-m月%-d日 %-H時%-M分')
  

