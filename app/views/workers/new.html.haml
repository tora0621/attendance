.form-wrapper
  .form-title アルバイト情報登録
  = form_with model: @worker, url: workers_path, method: :post, local: true do |f|
    .form-item
      = f.email_field :e_mail, autofocus: true, placeholder: 'E_MAIL'
    .form-item
      = f.text_field :first_name, placeholder: '名字 例)山田'
    .form-item
      = f.text_field :last_name, placeholder: '名前 例)太郎'
    .form-item
      = f.text_field :first_name_kana, placeholder: 'フリガナ 例)ヤマダ'
    .form-item
      = f.text_field :last_name_kana, placeholder: 'フリガナ 例)タロウ'
    .form-item
      = f.telephone_field :tel, placeholder: '電話番号 例)09012345678'
    .form-item
      = f.number_field :post_number, placeholder: '郵便番号 例)1234567'
    .form-item
      = f.text_field :address, placeholder: '住所 例)東京都東京市東京町1-1-1'
    .form-item
      = f.text_field :per_hour, placeholder: '時給 例)1000'
    .form-item
      生年月日 例）1990/10/20
      = f.date_field :birthday, placeholder: '生年月日 例）1990/10/20'
    .form-item
      = f.select :classification, ['正社員', '派遣', 'パートタイマー'],
							{ include_blank: '労働者区分' }
    .form-item
      = f.select :authority, ['管理権限者','一般スタッフ'],
							{ include_blank: '権限' }
    .form-item
      入社日 例）2018/1/1
      = f.date_field :hire_date
    .form-item
      退社日 例）2018/6/1
      = f.date_field :departure_date
    .button-panel
      = f.submit 'CREATE', class: 'button'
      = link_to 'HOME', root_path, class: 'back-button'