.main_wrapper
  .contents
    = render 'shared/header'

  %table
    %tr
      %th 名前
      %td= @worker.fullname
    %tr
    - @worker.wages.wage_all.each do |wage|
      %th 日付
      %td= wage.created_at.strftime('%Y/%m/%d')
    %tr
    - @worker.wages.wage_all.each do |wage|
      %th 基本給
      %td= wage.base
    %tr
    - @worker.wages.wage_all.each do |wage|
      %th 超勤
      %td= wage.long
    %tr
    - @worker.wages.wage_all.each do |wage|
      %th 深夜
      %td= wage.night
    %tr
    - @worker.wages.wage_all.each do |wage|
      %th 合計
      %td= wage.total
    %tr
    - @worker.wages.wage_all.each do |wage|
      %th まかない
      %td= wage.meals
    
  
  
